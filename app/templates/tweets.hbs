<div class="hook" id="hook"></div>

<nav class="actionbar actionbar-fixed-top">
  <div class="container">
    <ul class="actionbar-nav">
      <li class="actionbar-title">{{title}}</li>
      <li> 
        {{#link-to 'tweets.tweetout' class='actionbar-btn'}}
          <span class="glyphicon glyphicon-plus"></span>
        {{/link-to}}
      </li>
      <li>
        <a {{action 'toggleSearchBar'}} class="actionbar-btn">
          <span class="glyphicon glyphicon-search"></span> Buscar
        </a>
      </li>
    </ul>
  </div>
</nav>

{{#if searchBarVisible}}
  {{search-bar hide='toggleSearchBar' search='getMoreSearch'}}
{{/if}}

{{outlet}}

<nav class="actionbar actionbar-default actionbar-fixed-bottom">
  <div class="container">
    <ul class="actionbar-nav actionbar-tabs">
      {{#link-to 'tweets.index' tagName='li' replace=true}}
        <a>
        <img class="tabs-img" src="images/geography-25.png">
        <p>Cercanos</p>
        </a>
      {{/link-to}}
      {{#link-to 'tweets.earthquakes' tagName='li' replace=true}}
        <a>
          <img class="tabs-img" src="images/earthquakes-25.png">
          <p>Terremotos</p>
        </a>
      {{/link-to}}
      {{#link-to 'tweets.fires' tagName='li' replace=true}}
        <a>
          <img class="tabs-img" src="images/fires-25.png">
          <p>Incendios</p>
        </a>
      {{/link-to}}
      <li>
      {{#link-to 'tweets.fires' tagName='li' replace=true}}
        <a>
          <img class="tabs-img" src="images/floods-25.png">
          <p>Inundaciones</p>
        </a>
      {{/link-to}}
    </ul>
  </div>
</nav>
