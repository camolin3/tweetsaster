{{#if hasTweets}}
  {{#each itemController='tweet'}}
    {{#link-to 'tweet.index' this class="no-underline"}}
    <div class="list-element">
      <div class="main-col">
        <div class="side-col">
          <div class="time">
            {{timePassed}}
          </div>
        </div>
        {{{text}}}
      </div>
    </div>
    {{/link-to}}
  {{/each}}
  
  {{#if showingSpinner}}
    <div class="list-element">
        <div id="loading-gif">
        </div>
    </div>
  {{/if}}  
    
{{else}}
  <div class="list-element">
    <div class="main-col">
      No hay tweets..
    </div>
  </div>
{{/if}}
