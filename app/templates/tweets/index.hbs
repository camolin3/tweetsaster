<div class="list-wrapper">
    {{#if model}}
    	{{#each itemController='tweet'}}
    		<div class="list-element">
    			<div class="main-col">
    				<div class="side-col">
    					<div class="time">
    						{{timePassed}}
    					</div>
    					{{#if controller.image}}
    						<div class="img-tweet">
    							<img {{bind-attr src="controller.image"}}>
    						</div>
    					{{/if}}
    				</div>
    				{{{text}}}
    			</div>
    		</div>
    	{{/each}}
    	<div class="list-element">
    			<div id="loading-gif">
    			</div>
    	</div>
    {{else}}
	<div class="list-element">
		<div class="main-col">
			Todav√≠a no hay tweets en este canal
		</div>
	</div>
    {{/if}}
</div>

